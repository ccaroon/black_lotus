<div id='sr_card_<%= card.id %>' data-id='<%= card.id %>' class='col-md-3 search_result'>
  <div id='sr_card_img_<%= card.id %>' class='thumbnail' style='display:none'>
      <img src='<%= card.image_path %>' class="img-responsive">
      <div class="caption text-center">
      <% if (card.available_count > 0) { %>
      Available: <%= card.available_count %>
      <div class='btn-group btn-group-sm'>
          <button type="button" class='btn btn-primary btn-sm' onClick='BlackLotus.Deckbuilder.add_card("main", <%= card.id %>, "<%= card.image_path %>", 1)'>M+1</button>
          <button type="button" class='btn btn-default btn-sm' onClick='BlackLotus.Deckbuilder.add_card("side", <%= card.id %>, "<%= card.image_path %>", 1)'>S+1</button>
      </div>
      </p>
      <% } else { %>
        None Available
      <% } %>
      </div>
  </div>
</div>
