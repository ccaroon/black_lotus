BlackLotus.Card = {

    init: function () {
        $('#card_count_dec').click(function () {
            count = $('#card_count').val();
            count = Number(count) - 1;
            $('#card_count').val(count);        
        });

        $('#card_count_inc').click(function () {
            count = $('#card_count').val();
            count = Number(count) + 1;
            $('#card_count').val(count);        
        });

        $('#card_sub_type').typeahead({
          name: 'sub_type',
          local: <%= Card.sub_types.to_json %>
        });
    },

    showImage: function (image_id) {
        $('.card-image').hide();
        $("#"+image_id).show();
    }

};

BlackLotus.Card.init();    
