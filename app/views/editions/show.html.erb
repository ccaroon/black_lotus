<div class="page-header">
  <h1><%= @edition.name %> (<%= @edition.cards.count %>/<%= @edition.card_count %>)</h1>
  <%= link_to 'Edit', edit_edition_path(@edition), :class => "btn btn-mini" %>
  <%= link_to 'Back', :back, :class => "btn btn-mini" %>
</div>

<div class="containter">
  <ul class="thumbnails">
    <% @edition.cards.each do |card| %>
    <li class="span2">
      <div class="thumbnail">
        <a rel="popover" href="#"
           data-placement="right"
           data-html="true"
           data-animation="false"
           data-trigger="hover"
           data-content='<%= (render :partial => 'shared/card', :object => card).html_safe %>'><img src="<%= card_image_path(card) %>" alt="<%= card.name %>" width="200"></a>        
      </div>
    </li>
    <% end %>
  </ul>
</div>
