<div class="page-header"><h1>Utilities</h1></div>
<div class="container">
  <div class="row">
    <div class="col-md-10">
    
      <div class="tabbable">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#export" data-toggle="tab">Export...</a></li>
          <li><a href="#sync" data-toggle="tab">Sync...</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="export">
            <%= button_to "Export Cards", {action: 'export_cards'}, class: "btn btn-primary", id: 'export_button', method: :get  %>
            <p>
            <div class="progress progress-striped active">
              <div id="export_cards_progress" class="progress-bar progress-bar-success" style="width: 0%;"></div>
            </div>
          </div>
          <div class="tab-pane" id="sync">
            <form id="sync_db" class="form-inline" method="post" action="<%= utils_sync_db_path %>">
              <input type="text" class="input-sm" placeholder="Host or IP" name="host">
              <button class="btn btn-primary" type="submit">Sync Db</button>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

