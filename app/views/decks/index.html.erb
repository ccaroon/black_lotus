<div class="page-header"><h1>Decks</h1></div>

<%= paginate @decks %>

<table class="table table-striped table-condensed">
  <tr>
    <th>Name</th>
    <th>Format</th>
    <th>Card Count</th>
    <th></th>
  </tr>

<% @decks.each do |deck| %>
  <tr>
    <td><%= deck.name %></td>
    <td><%= deck.format %></td>
    
    <td><%= deck.main_count %> (<%= deck.side_count %>)</td>
    
    <td>
      <%= link_to deck, :class => "btn btn-small" do %>
        <i class="icon-eye-open"></i>
      <% end %>
      <%= link_to edit_deck_path(deck), :class => "btn btn-small" do %>
        <i class="icon-pencil"></i>
      <% end %>
      <%= link_to deck, method: :delete, :class => "btn btn-small btn-danger", data: { confirm: "Delete '#{deck.name}'?" } do %>
        <i class="icon-trash"></i>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
