<div class="page-header">
  <h1>Building <%= @deck.name %> &mdash; <%= @deck.format %></h1>
</div>

<div class="navbar">
  <div class="navbar-inner">
    <form class="navbar-search pull-left" onSubmit="card_search();return false;">
      <div class="input-append">
        <input id="search_string" 
               type="text" 
               name="search_string" 
               class="search-query"
               autocomplete="off"
               placeholder="Search Cards..."
               autofocus >
      </div>
      <span id="search_error"></span>
    </form>
  </div>
</div>

<div class="containter">
  <ul id="main_deck" class="thumbnails">
    <% @deck.card_in_deck.each do |card_in_deck| %>
    <li class="span2">
      <div id="card_<%= card_in_deck.card.id %>" class="thumbnail">
        <img src="<%= card_image_path(card_in_deck.card) %>" alt="<%= card_in_deck.card.name %>">
      </div>
    </li>
    <% end %>
  </ul>
</div>

<div>
  <form id="deck_builder_form" method="post" action="<%= save_build_deck_path %>">
    <div id="cards_to_add">
    </div>
    <button class="btn btn-primary">Save</button>
  </form>
</div>
