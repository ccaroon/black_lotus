<%= form_for @card, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @card.errors.any? %>
    <div class="alert alert-error">
      <h4>Unable to save Card</h4>
    </div>
  <% end %>

  <div class="control-group <%= @card.errors[:name].present? ? "alert alert-error" : '' %>">
    <%= f.label :name, :class=> "control-label" %>
    <div class="controls">
      <%= f.text_field :name, :autofocus => true %>
      <% if @card.errors[:name].present? %>
        <% @card.errors[:name].each do |msg| %>
          <span class="label label-important"><%= msg.titlecase %></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :mana_cost, :class => "control-label" %>
    <div class="controls"><%= f.text_field :mana_cost %></div>
  </div>
  
  <div class="control-group">
    <%= f.label :main_type, :class => "control-label" %>
    <div class="controls">
      <%= f.select :main_type, Card::CARD_TYPES %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :sub_type, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :sub_type, :autocomplete => 'off', 'data-provide' => 'typeahead', 'data-source' => Card.sub_types.to_json %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :editions, :class => "control-label" %>
    <div class="controls">
      <ul class="inline">
        <% @card.editions.each do |e| %>
          <li><span class="label label-default"><%= e.name %></span></li>
        <% end %>
      </ul>
      <%= f.collection_select :editions, @card.available_editions, :id, :name, {:include_blank => true} %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :foil, :class => "control-label" %>
    <div class="controls"><%= f.check_box :foil %></div>
  </div>
  
  <div class="control-group">
    <%= f.label :rarity, :class => "control-label" %>
    <div class="controls">
      <% Card::RARITIES.each do |r| %>
        <%= f.radio_button :rarity,  r, :class => 'radio inline' %> <span class="badge <%= rarity_to_css(r) %>"><%= r %></span>
      <% end %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :count, :class => "control-label" %>
    <div class="controls">
      <div class="input-prepend input-append">
        <button id="card_count_dec" class="btn" type="button"><i class="icon-minus"></i></button>
        <%= f.number_field :count, :class => "input-mini", :disabled => false %>  
        <button id="card_count_inc" class="btn" type="button"><i class="icon-plus"></i></button>
      </div>
    </div>
  </div>
  
  <div class="control-group">
    <div class="form-actions">
      <%= f.submit nil, :class => "btn btn-primary" %>
      <%= f.button "Cancel", :type => "button", :class => "btn" %>
    </div>
  </div>
<% end %>
