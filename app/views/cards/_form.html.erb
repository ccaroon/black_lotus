<%= form_for @card, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class=> "control-label" %>
    <div class="controls"><%= f.text_field :name %></div>
  </div>

  <div class="control-group">
    <%= f.label :mana_cost, :class => "control-label" %>
    <div class="controls"><%= f.text_field :mana_cost %></div>
  </div>
  
  <div class="control-group">
    <%= f.label :main_type, :class => "control-label" %>
    <div class="controls">
      <%= f.select :main_type, Card::CARD_TYPES %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :sub_type, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :sub_type, :autocomplete => false, 'data-provide' => 'typeahead', 'data-source' => Card.sub_types.to_json %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :foil, :class => "control-label" %>
    <div class="controls"><%= f.check_box :foil %></div>
  </div>
  
  <div class="control-group">
    <%= f.label :rarity, :class => "control-label" %>
    <div class="controls">
      <% Card::RARITIES.each do |r| %>
        <%= f.radio_button :rarity,  r, :class => 'radio inline' %> <span class="badge <%= rarity_to_css(r) %>"><%= r %></span>
      <% end %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :count, :class => "control-label" %>
    <div class="controls"><%= f.number_field :count, :class => "input-mini" %></div>
  </div>
  
  <div class="control-group">
    <div class="form-actions">
      <%= f.submit nil, :class => "btn btn-primary" %>
      <%= f.button "Cancel", :type => "button", :class => "btn" %>
    </div>
  </div>
<% end %>
