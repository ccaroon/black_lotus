<div class="page-header"><h1>Cards</h1></div>

<%= paginate @cards %>

<form class="form-search">
  <div class="input-append">
    <input type="text" name="search_string" class=" input-medium search-query" autofocus>
    <i class="add-on icon-search"></i>
  </div>
</form>
    
<table class="table table-striped table-condensed">
  <tr>
    <th>Name</th>
    <th>Mana Cost</th>
    <th>Main Type</th>
    <th>Sub Type</th>
    <th>Rarity</th>
    <th>Count</th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td>
      <a rel="popover" href="#"
         data-placement="right"
         data-html="true"
         data-animation="false"
         data-trigger="hover"
         data-content="<img src='<%= card_image_path(card) %>'>"><%= card.name %></a>
    </td>
    <td><%= card.mana_cost %></td>
    <td><%= card.main_type %></td>
    <td><%= card.sub_type %></td>
    <td><%= card.rarity %></td>
    <td><%= card.count %></td>
    
    <td>
      <%= link_to card, :class => 'btn btn-small' do %>
        <i class="icon-eye-open"></i>
      <% end %>
      
      <%= link_to  edit_card_path(card), :class => 'btn btn-small' do %>
        <i class="icon-pencil"></i>
      <% end %>
      
      <%= link_to card, :class => 'btn btn-small btn-danger', method: :delete, data: { confirm: "Delete '#{card.name}'?" } do %>
        <i class="icon-trash"></i>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
