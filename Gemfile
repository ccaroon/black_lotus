  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end

group :test do
    gem 'rspec',             '~> 2.13.0'
    gem 'rspec-rails',       '~> 2.13.0'
    gem "factory_girl_rails", "~> 4.0"
end
